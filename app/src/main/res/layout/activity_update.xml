<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:id="@+id/id_area_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_tiffany_blue"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_area_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_tiffany_blue_dark"
        android:elevation="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_button_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_exit_white_24dp"
            android:gravity="center"
            android:scaleType="center"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/update_activity_title_default"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/id_button_exit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/id_area_work"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_textview_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="24sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/id_textview_step0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/id_textview_step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/id_textview_step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/id_textview_step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/id_textview_step4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="24sp"
            />
    </LinearLayout>

</LinearLayout>
</layout>